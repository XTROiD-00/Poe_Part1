@model IEnumerable<Poe_Part1.Models.Claim>

@{
    ViewData["Title"] = "Track Claims";
}

<h1>My Claims</h1>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Claim ID</th>
                <th>Faculty Name</th>
                <th>Module Name</th>
                <th>Sessions</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Document</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ClaimId</td>
                    <td>@claim.FacultyName</td>
                    <td>@claim.ModuleName</td>
                    <td>@claim.Sessions</td>
                    <td>@claim.Hours</td>
                    <td>@claim.Rate</td>
                    <td>@claim.TotalAmount</td>
                    <td>
                        @if (!string.IsNullOrEmpty(claim.DocumentPath))
                        {
                            <a href="@claim.DocumentPath" target="_blank">View Document</a>
                        }
                        else
                        {
                            <span>No document</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No claims found.</p>
}
