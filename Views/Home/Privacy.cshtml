@model Poe_Part1.Models.login
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

@if (ViewBag.Message != null)
{
    <p class="text-success">@ViewBag.Message</p>
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<form asp-action="Privacy" method="post">
    <div>
        <input asp-for="name" placeholder="Name" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="surname" placeholder="Surname" />
        <span asp-validation-for="surname" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="email" placeholder="Email" type="email" />
        <span asp-validation-for="email" class="text-danger"></span>
    </div>
    <div>
        <input asp-for="password" placeholder="Password" type="password" />
        <span asp-validation-for="password" class="text-danger"></span>
    </div>

    <!-- Role Buttons -->
    <div>
        <button type="submit" name="role" value="Lecturer">Login as Lecturer</button>
        <button type="submit" name="role" value="Project Manager">Login as Project Manager</button>
        <button type="submit" name="role" value="Program coordinator">Login as Program Coordinator</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
