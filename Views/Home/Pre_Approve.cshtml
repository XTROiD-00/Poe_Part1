@model IEnumerable<Poe_Part1.Models.Claim>

@{
    ViewData["Title"] = "My Claims";
}

<h2>Claims</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Module</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Status</th>
            <th>Submitted Date</th>
            <th>Submitted Time</th>
            <th>Pre-Approved Date</th>
            <th>Document</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.ModuleName</td>
                    <td>@claim.Hours</td>
                    <td>@claim.Rate</td>
                    <td>@claim.Status</td>

                    <td>
                        <a href="@claim.DocumentPath" target="_blank">Download Document</a>
                    </td>
                    <td>
                        <!-- Approve Button -->
                        <form asp-action="PreApprove" asp-controller="Claim" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@claim.ClaimId" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <!-- Reject Button -->
                        <form asp-action="Reject" asp-controller="Claim" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@claim.ClaimId" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="9">No claims found.</td></tr>
        }
    </tbody>
</table>
