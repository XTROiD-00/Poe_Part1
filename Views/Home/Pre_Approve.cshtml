@{
    ViewData["Title"] = "Pre_Approve";
}
@Html.Partial("_Sum")

<h2> Pre-Approve Claims</h2>

<!-- Dynamic Table (from Model) -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Module</th>
            <th>Hours</th>
            <th>Rate</th>
            <th>Status</th>
            <th>Submitted Date</th>
            <th>Submitted Time</th>
            <th>Pre-Approved Date</th>
            <th>Document</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.Module</td>
                    <td>@claim.Hours</td>
                    <td>@claim.Rate</td>
                    <td>@claim.Status</td>
                    <td>@claim.SubmittedDate.ToShortDateString()</td>
                    <td>@claim.SubmittedTime.ToShortTimeString()</td>
                    <td>@(claim.PreApprovedDate.HasValue ? claim.PreApprovedDate.Value.ToShortDateString() : "-")</td>
                    <td>
                        <a href="/uploads/@claim.Document" target="_blank">@claim.Document</a>
                    </td>
                    <td>
                        <!-- Approve Button -->
                        <form asp-action="PreApprove" asp-controller="PreApprove" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                        </form>
                        <!-- Reject Button -->
                        <form asp-action="Reject" asp-controller="PreApprove" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button4 type="submit" class="btn btn-danger btn-sm">Reject</button4>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

