@{
    ViewData["Title"] = "Lecturer";
}

@Html.Partial("_Menu")

<section class="lecturer-home">

    <!-- Welcome Card -->
    <div class="card welcome-card">
        <h1 class="lecturer-title">Welcome 🎓</h1>
        <p class="lecturer-intro">
            This platform streamlines the process of submitting and managing monthly claims.
            Lecturers can easily upload supporting documents, complete structured forms, and
            track the status of their claims from submission to final approval.
            Built-in validation and mandatory fields ensure the process is accurate, consistent, and reliable.
        </p>
    </div>

    <!-- Workflow Card -->
    <div class="card workflow-card">
        <h2 class="workflow-title">Claim Submission Workflow</h2>
        <div class="workflow-steps">
            <div class="step">
                <div class="step-icon">📝</div>
                <div class="step-text">
                    <h3>Submit Claim</h3>
                    <p>Upload documents and fill in the claim form accurately.</p>
                </div>
            </div>
            <div class="step">
                <div class="step-icon">🔍</div>
                <div class="step-text">
                    <h3>Coordinator Verification</h3>
                    <p>The Program Coordinator reviews the claim for completeness and accuracy.</p>
                </div>
            </div>
            <div class="step">
                <div class="step-icon">✅</div>
                <div class="step-text">
                    <h3>Manager Approval</h3>
                    <p>The Program Manager makes the final decision to approve or reject the claim.</p>
                </div>
            </div>
        </div>
    </div>

</section>
