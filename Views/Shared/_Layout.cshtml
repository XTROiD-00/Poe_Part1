        /* ===== Base Dark Theme ===== */

        body {
            margin: 0;
            padding: 0;
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #0b0b0b; /* deep dark */
            color: #e8e8e8; /* soft neutral text */
            line-height: 1.6;
        }

        /* Container */
        .container {
            max-width: 1200px;
            margin: auto;
            padding: 30px;
        }

        /* ===== Headings ===== */
        h1, h2, h3, h4 {
            color: #fff;
            font-weight: 600;
            margin-bottom: 15px;
            line-height: 1.3;
        }

        h1 {
            font-size: 2.4rem;
            margin-top: 30px;
        }

        h2 {
            font-size: 2rem;
            margin-top: 25px;
        }

        h3 {
            font-size: 1.6rem;
            margin-top: 20px;
        }

        h4 {
            font-size: 1.2rem;
        }

        /* ===== Links ===== */
        a {
            color: #00bfff;
            text-decoration: none;
            transition: color 0.25s ease;
        }

            a:hover {
                text-decoration: underline;
                color: #1e90ff;
            }

        /* ===== Buttons ===== */
        button, .btn {
            background: linear-gradient(145deg, #1e90ff, #006bb3);
            color: #fff;
            border: none;
            padding: 12px 22px;
            margin: 5px 0;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            transition: transform 0.15s ease, box-shadow 0.25s ease, background 0.2s ease;
            display: inline-block;
        }

            button:hover, .btn:hover {
                box-shadow: 0 6px 18px rgba(30,144,255,0.4);
                transform: translateY(-3px);
            }

            button:active, .btn:active {
                transform: translateY(1px);
                box-shadow: none;
            }

        button2, .btn {
            background: linear-gradient(145deg, #1e90ff, #006bb3);
            color: #fff;
            border: none;
            padding: 12px 40px;
            margin: 5px 8px;
            border-radius: 10px;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            transition: transform 0.15s ease, box-shadow 0.25s ease, background 0.2s ease;
            display: inline-block;
        }

            button2:hover, .btn:hover {
                box-shadow: 0 6px 18px rgba(30,144,255,0.4);
                transform: translateY(-3px);
            }

            button2:active, .btn:active {
                transform: translateY(1px);
                box-shadow: none;
            }


        /* Success & Danger */
        .btn-success {
            background: linear-gradient(145deg, #28a745, #1c7430);
        }

            .btn-success:hover {
                box-shadow: 0 6px 18px rgba(40,167,69,0.4);
            }

        .btn-danger {
            background: linear-gradient(145deg, #dc3545, #a71d2a);
        }

            .btn-danger:hover {
                box-shadow: 0 6px 18px rgba(220,53,69,0.4);
            }

        /* ===== Inputs & Forms ===== */
        input, select {
            background-color: #151515;
            color: #f1f1f1;
            border: 1px solid #333;
            padding: 14px;
            border-radius: 10px;
            width: 100%;
            margin: 8px 0 20px 0;
            font-size: 0.95rem;
            transition: border-color 0.25s ease, box-shadow 0.25s ease, background-color 0.25s ease;
        }

            input:focus, select:focus {
                outline: none;
                border-color: #1e90ff;
                background-color: #1d1d1d;
                box-shadow: 0 0 10px rgba(30,144,255,0.6);
            }

        label {
            font-size: 0.9rem;
            font-weight: 500;
            color: #aaa;
            margin-bottom: 6px;
            display: block;
        }

        /* ===== Cards ===== */
        .card {
            background-color: #141414;
            padding: 35px;
            border-radius: 16px;
            margin-bottom: 30px;
            box-shadow: 0 10px 32px rgba(0,0,0,0.7);
            transition: transform 0.25s ease, box-shadow 0.25s ease;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 14px 40px rgba(0,0,0,0.8);
            }

        /* ===== Tables ===== */
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #181818;
            color: #f1f1f1;
            margin-bottom: 2rem;
            font-size: 0.95rem;
            border-radius: 12px;
            overflow: hidden;
        }

        thead {
            background-color: #242424;
        }

        th, td {
            border: 1px solid #333;
            padding: 16px;
            text-align: left;
        }

        tr:nth-child(even) {
            background-color: #202020;
        }

        tr:hover {
            background-color: #2a2a2a;
        }

        th {
            font-weight: 600;
            color: #fff;
            font-size: 1rem;
        }

        table a {
            color: #00bfff;
        }

            table a:hover {
                color: #1e90ff;
                text-decoration: underline;
            }

        /* ===== Auth Section (Home Page) ===== */
        section {
            margin-top: 50px;
        }

        .auth-section {
            max-width: 600px;
            margin: 80px auto;
            padding: 40px;
            text-align: center;
        }

        .auth-title {
            font-size: 2.2rem;
            margin-bottom: 15px;
            color: #fff;
        }

        .auth-subtitle {
            font-size: 1rem;
            margin-bottom: 40px;
            color: #aaa;
        }

        /* Toggle buttons like tabs */
        .button-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-bottom: 40px;
            flex-wrap: wrap;
        }

            .button-container button {
                flex: 1;
                min-width: 140px;
                border-radius: 50px; /* pill style */
                font-weight: 600;
            }

                .button-container button.active {
                    background: #007acc;
                    box-shadow: 0 0 18px rgba(30,144,255,0.8);
                }

        /* Forms */
        .user-form {
            text-align: left;
            margin-bottom: 30px;
            padding: 32px;
            background: #151515;
            border-radius: 16px;
            box-shadow: 0 8px 22px rgba(0,0,0,0.7);
            transition: transform 0.25s ease;
        }

            .user-form:hover {
                transform: translateY(-2px);
            }

            .user-form h4 {
                text-align: center;
                margin-bottom: 25px;
                color: #fff;
                font-size: 1.3rem;
            }

            .user-form button {
                width: 100%;
                margin-top: 20px;
                padding: 15px;
                font-size: 1.05rem;
                border-radius: 12px;
            }

        /* Error messages */
        .error-message, #loginMessage {
            color: #ff6b6b;
            text-align: center;
            margin-top: 15px;
            font-size: 0.95rem;
            font-weight: 500;
        }
        /* ===== Lecturer Home Page Styles ===== */
